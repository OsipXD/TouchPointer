<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ru.endlesscode.touchpointer.views.Pointer
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/pointer"
                android:longClickable="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp" android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="false"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ru.endlesscode.touchpointer.views.TouchArea
                android:layout_width="150dp"
                android:layout_height="300dp" android:id="@+id/touchArea1"
                android:layout_alignParentTop="true" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        <ru.endlesscode.touchpointer.views.TouchArea
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/touchArea2"
                android:clickable="false" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_toLeftOf="@+id/touchArea1"
                android:layout_above="@+id/touchArea3"/>
        <ru.endlesscode.touchpointer.views.TouchArea
                android:layout_width="200dp"
                android:layout_height="200dp" android:id="@+id/touchArea3"
                android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        <ru.endlesscode.touchpointer.views.TouchArea
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/touchArea4"
                android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:layout_below="@+id/touchArea1"
                android:layout_toRightOf="@+id/touchArea3"/>
    </RelativeLayout>
</FrameLayout>