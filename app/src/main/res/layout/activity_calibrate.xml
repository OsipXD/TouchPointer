<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight"
    tools:context="ru.endlesscode.touchpointer.activity.CalibrateActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleX="2.0"
                android:scaleY="2.0"
                android:id="@+id/button_icon"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_toggle"
                android:layout_margin="20dp" />
        </RelativeLayout>

        <TextView
            android:text="@string/button_calibrate_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_calibrate_title"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:text="@string/button_calibrate_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_calibrate_caption"
            android:gravity="center"
            android:textAllCaps="false" />
    </LinearLayout>

</RelativeLayout>
